generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique
  name     String
  email    String    @unique
  password String
  payment  Payment[]
  Plan     Plan?     @relation(fields: [planId], references: [id])
  planId   String?
}

model Payment {
  id             String   @id @unique
  date           DateTime
  expirationDate DateTime
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  plan           Plan     @relation(fields: [planId], references: [id])
  planId         String
}

model Plan {
  id          String    @id @unique
  name        String
  description String
  price       Int
  duration    Int
  payments    Payment[]
  user        User[]
}
